// Debugger Demo - RADS v0.0.6
// Demonstrates DAP (Debug Adapter Protocol) with breakpoints

blast main() {
    echo("ğŸš€ RADS Debugger Demo v0.0.6");
    echo("Starting with debug mode enabled");
    echo("Connect your DAP client to localhost:9229\n");

    // Program to debug
    turbo counter = 0;

    // This function will be stepped through
    blast increment_counter() {
        counter = counter + 1;
        echo("ğŸ“ Line reached, counter now: " + str(counter));

        // Breakpoint can be set here
        if (counter == 5) {
            echo("â¸ï¸ Breakpoint hit at counter=5");
        }
    }

    // Loop multiple times
    turbo i = 0;
    while (i < 10) {
        increment_counter();

        // Conditional breakpoint
        if (counter % 2 == 0) {
            echo("â¸ï¸ Conditional breakpoint (even numbers)");
        }

        i = i + 1;
    }

    echo("\nâœ… Debug session complete");
    echo("Final counter value: " + str(counter));
}

