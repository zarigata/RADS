    str name;
    i32 level;
    i32 health;
}

struct Item {
    str name;
    i32 quantity;
}
*/

// Uncomment to test (create game_types.rads first):
// import "game_types.rads";

blast main() {
    echo("=== RADS Import System Demo ===");
    echo("");
    echo("The import system allows you to:");
    echo("1. Split code across multiple files");
    echo("2. Reuse struct definitions");
    echo("3. Organize code into modules");
    echo("");
    echo("Syntax: import \"filename.rads\";");
    echo("");
    echo("See /tmp/test_import_structs.rads for a working example!");
}
