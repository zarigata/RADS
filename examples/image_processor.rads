// Image Processor Example
// Process and convert images with filters

import media;
import io;

blast main() {
    echo("ğŸ“¸ RADS Image Processor");
    echo("=======================");
    echo("");
    
    // Load image
    echo("Loading photo.jpg...");
    turbo img = media.load_image("photo.jpg");
    
    if (img == null) {
        echo("âŒ Error: Could not load image!");
        return;
    }
    
    echo("âœ… Image loaded successfully");
    echo("   Dimensions: " + img.width() + "x" + img.height());
    echo("   Format: " + img.format());
    echo("");
    
    // Resize
    echo("Resizing to 800x600...");
    img.resize(800, 600);
    echo("âœ… Resized");
    
    // Apply vintage filter (90s aesthetic!)
    echo("Applying vintage filter...");
    img.apply_filter("vintage");
    echo("âœ… Filter applied");
    
    // Adjust brightness
    echo("Adjusting brightness...");
    img.brightness(1.2);
    echo("âœ… Brightness adjusted");
    
    // Save as PNG
    echo("Saving as output.png...");
    img.save("output.png");
    echo("âœ… Saved");
    
    // Create thumbnail
    echo("Creating thumbnail...");
    turbo thumb = img.clone();
    thumb.resize(150, 150);
    thumb.save("thumbnail.png");
    echo("âœ… Thumbnail created");
    
    echo("");
    echo("ğŸ‰ Image processing complete!");
}
